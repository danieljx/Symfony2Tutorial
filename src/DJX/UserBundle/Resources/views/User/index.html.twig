{% extends 'layout.html.twig' %}

{% block body %}
<h2>Users</h2>

<table border=1>
    <thead>
        <tr>
            <td>Username</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Role</td>
            <td>Created</td>
            <td>Update</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if user.role == 'ROLE_ADMIN' %}
                        <strong>Administrador</strong>
                    {% elseif user.role == 'ROLE_USER' %}
                        <strong>Usuario</strong>
                    {% endif %}
                </td>
                <td>{{ user.createAt|date('d/m/Y H:i') }}</td>
                <td>{{ user.updateAt|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="#">View</a>
                    <a href="#">Edit</a>
                    <a href="#">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}